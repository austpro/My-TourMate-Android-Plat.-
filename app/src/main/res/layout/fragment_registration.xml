<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#20b2aa"
    tools:context="com.example.rana.mytrippmate.RegistrationFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/singupTV_id"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/nameTV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/singupTV_id"/>
    <EditText
        android:id="@+id/name_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/nameTV_id"
        android:layout_alignBottom="@+id/nameTV_id"
        android:layout_alignBaseline="@+id/nameTV_id"/>
    <TextView
        android:id="@+id/email_TV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nameTV_id"/>

    <EditText
        android:id="@+id/email_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/email_TV_id"
        android:layout_alignBottom="@id/email_TV_id"
        android:layout_alignBaseline="@id/email_TV_id"/>
    <TextView
        android:id="@+id/phone_TV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="30sp"
        android:layout_below="@+id/email_TV_id"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/phone_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/phone_TV_id"
        android:layout_alignBottom="@+id/phone_TV_id"
        android:layout_alignBaseline="@id/phone_TV_id"/>

    <TextView
        android:id="@+id/password_TV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp"
        android:layout_below="@+id/phone_TV_id"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/password_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/password_TV_id"
        android:layout_alignBottom="@+id/password_TV_id"
        android:layout_alignBaseline="@id/password_TV_id"/>


    <Button
        android:id="@+id/signUp_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/singupTV_id"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="61dp"
        android:text="Register"
        android:background="#66cdaa"
        android:textSize="30sp" />

</RelativeLayout>
