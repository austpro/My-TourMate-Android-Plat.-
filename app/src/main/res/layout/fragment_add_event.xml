<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#20b2aa"
    android:padding="15dp"
    tools:context="com.example.rana.mytrippmate.AddEventFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
       android:id="@+id/eventName_ET_Id"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter an Event Name"
       android:textAlignment="center"
       android:textSize="25sp"
       android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/startingLocation_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Starting Location"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/destination_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/departure_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Departure Time"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/budget_ET_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Estimated Budget"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/eventSaveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Event"
        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:background="#98fb98"/>


</LinearLayout>
